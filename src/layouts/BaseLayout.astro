---
import SocialLinks from '@/components/SocialLinks.astro'

import '@fontsource/questrial'
import '@fontsource/barlow';
import '@/styles/main.css'
import { ViewTransitions } from 'astro:transitions';

const details = {
    title: 'Lindsay Wardell',
    description: 'Programmer, writer, mother. She/Her. Interested in Vue, Typescript, Node.js, and Elm.',
    image: 'https://lindsaykwardell.com/lindsay.jpg',
    permalink: 'https://lindsaykwardell.com'
}

let { title, description, image, permalink } = Astro.props;

title = title || details.title;
description = description || details.description;
image = image ? (image.includes("http") ? image : details.permalink + image) : details.image
permalink = permalink ? details.permalink + permalink : details.permalink;
---
<html lang="en">
  <head>
    <!-- Global Metadata -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.png" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:site_name" content="Lindsay Wardell" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={permalink} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={permalink} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />

    <slot name="head"></slot>

    <ViewTransitions />
  </head>

  <body>
    <slot />

    <script data-goatcounter="https://lindsaykwardell.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script>
  </body>
</html>