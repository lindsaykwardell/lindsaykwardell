---
import BaseLayout from '../layouts/BaseLayout.astro'
import BlogPostPreview from '../components/BlogPostPreview.astro';

const posts = await Astro.glob<{
    link?: string
    url?: string
    image?: string
    title: string
    snippet?: string
    date?: Date
  }>('./blog/*.md');
const allPosts = posts.filter(post => new Date(post.frontmatter.date) <= new Date()).sort((a, b) => new Date(b.frontmatter.date).valueOf() - new Date(a.frontmatter.date).valueOf());

---
<BaseLayout>
  <div class="flex flex-col lg:flex-row flex-wrap">
    {allPosts.map(p => (
      <div class="w-full lg:w-1/2 xl:w-1/3 p-4">
        <BlogPostPreview item={{...p.frontmatter, url: p.url}} />
      </div>
    ))}
  </div>
</BaseLayout>